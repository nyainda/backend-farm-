{
  "version": 2,
  "functions": {
    "api/index.php": { "runtime": "vercel-php@0.6.1" }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "builds": [
    {
      "src": "api/index.php",
      "use": "@vercel/php",
      "config": { "composer": true }
    }
  ],
  "build": {
    "env": {
      "APP_ENV": "production",
      "APP_DEBUG": "false", 
      "APP_URL": "https://your-vercel-app-url.vercel.app"
    },
    "scripts": {
      "build": "composer install --no-dev --optimize-autoloader && php artisan jwt:secret && php artisan migrate:fresh --seed"
    }
  },
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false", 
    "APP_URL": "https://your-vercel-app-url.vercel.app",
    "APP_CONFIG_CACHE": "/tmp/config.php",
    "APP_EVENTS_CACHE": "/tmp/events.php",
    "APP_PACKAGES_CACHE": "/tmp/packages.php",
    "APP_ROUTES_CACHE": "/tmp/routes.php",
    "APP_SERVICES_CACHE": "/tmp/services.php",
    "VIEW_COMPILED_PATH": "/tmp",
    "CACHE_DRIVER": "array",
    "LOG_CHANNEL": "stderr",
    "SESSION_DRIVER": "cookie"
  }
}
